public class MaxSubarray {
	public static int[] maxSubarray(int[] arr) {

		int result = arr[0];
		int max = arr[0];
		int l=0,r=0;
		
		int i;
		for(i=1;i<arr.length;i++) {
			max=Math.max(arr[i], max+arr[i]);
			
			if(max == arr[i]) {
				l=i;
			}
			
			result = Math.max(result, max);
			if(result == max) {
				r=i;
			}
		}
		int[] resultArray = {result,l,r};
		
		return  resultArray;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arr = {-1, 10, -11, -1, 17, 0, 0, 9, 20, 7, -8, -6, -18};
		System.out.println("Maximum sum of subarray is: " + maxSubarray(arr)[0]);
		System.out.println("Indexes are "+ maxSubarray(arr)[1] + " - " +maxSubarray(arr)[2]);

	}

}
